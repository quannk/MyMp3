<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_control_notification"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:background="@android:color/background_dark"
    >

    <ImageView
        android:id="@+id/img_songs"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_girl" />

    <LinearLayout
        android:id="@+id/ll_songs_item_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/txt_songs_title_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Over world"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:lines="1"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            />

        <TextView
            android:id="@+id/txt_songs_artist_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:text="samsung" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_previous_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_pre"
                android:scaleType="centerInside"
                />

            <ImageView
                android:id="@+id/iv_pause_play_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_pause"
                android:scaleType="centerInside"
                />

            <ImageView
                android:id="@+id/iv_next_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_next"
                android:scaleType="centerInside"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>